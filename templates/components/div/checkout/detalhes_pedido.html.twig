{% set id = id|default(random()) %}
{% set title =  "#" ~ id ~ " - " ~ nomeAtleta%}
<div id="divAccordion{{ id }}">
    <x-div.accordion
            icon="mdi-account-outline"
            title="{{ title }}" id="{{ id }}">
        <div class="card-header d-flex justify-content-between align-items-center">
            <p class="h6">Detalhes</p>
            <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeItemCarrinho('{{ id }}')"><span class="mdi mdi-trash-can-outline"></span> Remover</button>
        </div>
        <div class="row">
            <p><span class="mdi mdi-18px mdi-account-outline"></span> <span class="fw-semibold"> {{ nomeAtleta }}</span></p>
        </div>
        <div class="row">
            <div class="form-group col-md-6 col-12">
                <label class="mb-0">Modalidade/Categoria</label>
                <p id="pNomeModalidade">{{ nomeModalidade }} - {{ nomeCategoria }}</p>
            </div>
            <div class="form-group col-md-6 col-12">
                <label class="mb-0">Detalhes do kit</label>
                <p id="pNomeKit">{{ nomeKit }}</p>
            </div>
        </div>
        <div class="row">
            <x-div.alert type="light">
                <div class="row">
                    <div class="col-6 col-md-3 col-lg-3 col-xl-2 p-0">
                        <h6 class="fw-semibold mb-0">Valor Inscrição:</h6>
                    </div>
                    <div class="col-6 col-md-9 col-lg-9 col-xl-10 p-0">
                        <p class="mb-0" id="pDescontos">R$ {{ valorModalidade }}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3 col-lg-3 col-xl-2 p-0">
                        <h6 class="fw-semibold mb-0">Kits:</h6>
                    </div>
                    <div class="col-6 col-md-9 col-lg-9 col-xl-10 p-0">
                        <p class="mb-0" id="pDescontos">+ R$ {{ valorKit }}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3 col-lg-3 col-xl-2 p-0">
                        <h6 class="fw-semibold mb-0">Taxa <span class="mdi mdi-help-circle-outline" tabindex="0" data-bs-toggle="popover" data-bs-trigger="focus" data-bs-title="Taxa de Serviço" data-bs-content="Taxa referente ao uso da plataforma"></span>:</h6>
                    </div>
                    <div class="col-6 col-md-9 col-lg-9 col-xl-10 p-0">
                        <p class="mb-0" id="pTaxas">+ R$ {{ valorTaxas }}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3 col-lg-3 col-xl-2 p-0">
                        <h6 class="fw-semibold mb-0">Descontos:</h6>
                    </div>
                    <div class="col-6 col-md-9 col-lg-9 col-xl-10 p-0">
                        <p class="mb-0" id="pDescontos">- R$ {{ valorDescontos }}</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6 col-md-3 col-lg-3 col-xl-2 p-0">
                        <h6 class="fw-semibold mb-0">Subtotal:</h6>
                    </div>
                    <div class="col-6 col-md-9 col-lg-9 col-xl-10 p-0">
                        <p class="mb-0" id="pSubtotal">R$ {{ valorSubtotal }}</p>
                    </div>
                </div>
            </x-div.alert>
        </div>
    </x-div.accordion>
</div>