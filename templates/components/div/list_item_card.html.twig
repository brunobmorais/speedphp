<div class="col-12 col-sm-12 col-lg-4 p-1 ciCardServico" onclick="window.location.href = '{{ onclick }}/'">
    <div class="card servico-card">
        <div class="row servico-item">
            <div class="col-2 col-sm-3 col-md-2 servico-icone">
                <div class="servico-div">
                    <span class="mdi {{ icon | default("mdi-box") }}" aria-hidden="true"></span>
                </div>
            </div>
            <div class="col-10 col-sm-9 col-md-10">
                <div class="servico-div">
                    <div class="servico-titulo">{{ title | default("title") }}</div>
                    <div class="servico-descricao">{{ description | default("description")}}</div>
                </div>
            </div>
        </div>
    </div>
</div>
