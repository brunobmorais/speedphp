:root {
    --sidebar-item-hover: #e9ecef;
    --sidebar-item-color: #6c757d;
    --sidebar-active: #e9ecef;
    --sidebar-active-color: #000
}

.dark-mode:root {
    --sidebar-item-hover: #000;
    --sidebar-item-color: #fff;
    --sidebar-active: #000;
    --sidebar-active-color: #fff
}

.sidebar {
    height: 100%;
    width: 85px;
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    background-color: var(--mycolor-card);
    transition: 0.5s;
    overflow-x: hidden;
    padding-top: 65px;
    white-space: nowrap;
    box-shadow: rgba(0, 0, 0, 0.12) 0px 6px 16px !important;
}

.sidebar li a {
    padding: 8px 8px 8px 32px;
    color: var(--sidebar-item-color) !important;
    display: block;
}

.sidebar li .sidebar-item:hover {
    background: var(--sidebar-item-hover);
    color: var(--sidebar-item-color) !important;
}

.sidebar li .active {
    background: var(--sidebar-item-hover);
    color: var(--sidebar-item-color) !important;
}

.sidebar li .active .sidebar-item-link{
    color: var(--sidebar-active-color) !important;
}

.sidebar li .active .sidebar-item-icon::before
{
    color: var(--sidebar-active-color) !important;
}

#main {
    margin-left: 85px;
    transition: margin-left 0.5s;
}

@media (max-width: 765px) {
    .sidebar {
        padding-top: 15px;
    }
    .sidebar a {
        font-size: 18px;
    }

    #main{
        margin-left: 0 !important;
    }
}