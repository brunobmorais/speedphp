.dropdown-menu-navbar {
    min-width: 200px;
}

.nlCadaLink {
    line-height: 1.2;
}

.nlCadaLink .nlIcone {
    font-size: 1.6em;
}

.nlCadaLink .nlLink {
    font-weight: 500 !important;
    font-size: .85em;
    letter-spacing: -1px;
}

.nlCadaLink:hover {
    color: #fff;
}

.navbar {
    box-shadow: 0 0.175rem 0.3rem 0 rgba(0, 0, 0, 0.3);
}

.nav-link-navbar {
    display: flex;
    align-items: center;
    height: 100%;
    margin-left: 20px;
    font-weight: 700;
    color: rgb(255 255 255 / 70%) !important;
}

@media (max-width: 576px) {
    .nlCadaLink .nlLink {
        font-weight: 400 !important;
        font-size: .75em;
        letter-spacing: -1px;
    }
}