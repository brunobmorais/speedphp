<div class="row">
    {% block buttonTableLeft %}
        <div class="col-md-6 col-12 p-0">
            {% if(SERVICO.SALVAR=="1") %}
                <button type="button" id='btnTopTable' onclick="window.location.href = '{{ SERVICO.URL }}-cadastro/'" class="btn btn-outline-secondary col-md-3 col-lg-2 col-12 mb-1 mb-md-0"><span class="mdi mdi-plus"></span> Novo</button>
            {% endif %}
        </div>
    {% endblock %}

    {% block buttonTableRight %}
        <div class="col-md-6 col-12 p-0">
            <form action="{{ SERVER['REQUEST_URI'] }}" class="mb-0">
                <div class="input-group justify-content-end">
                    <input class="form-control" name="b" placeholder="{{ TABLE_INPUT_PLACEHOLDER }}"
                           value="{{ GET.b }}">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">
                        <span class="mdi mdi-magnify"></span> <span class="d-none d-inline-block"> Buscar</span>
                    </button>
                    <button type="button" class="btn btn-outline-secondary" onclick="window.location.href = './'"><span class="mdi mdi-format-list-bulleted"></span> <span class="d-none d-inline-block"> Todos</span></button>
                </div>
            </form>
        </div>
    {% endblock %}
</div>