function setarCodPessoa_UrlRetorno_InputImgPerfil(codPessoa, urlRetorno, imgPerfil) {
    // Pega os elementos pelo ID
    const inputCodPessoa = document.getElementById('codPessoa');
    const inputUrlRetorno = document.getElementById('urlRetorno');
    const inputImgPerfil = document.getElementById('inputImgPerfil');

    // Seta os valores
    inputCodPessoa.value = codPessoa;
    inputUrlRetorno.value = urlRetorno;
    inputImgPerfil.value = imgPerfil;

    // Opcional: log para confirmar que foi setado
    console.log('Valores setados:', { codPessoa, urlRetorno, inputImgPerfil });
}

