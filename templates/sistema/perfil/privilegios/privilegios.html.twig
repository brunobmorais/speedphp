<main>
    <section class="section">
        <div class="container my-container">
            <div class="col-12 p-0">
                <div class="card sombra-1">
                    <div class="card-body pt-4">
                        <div class="col p-2">
                            <h6 class="px-3 pb-3">Perfil: {{ PERFIL.NOME }}</h6>
                            <form id="form" action="{{ SERVICO.URL }}-privilegios-action/" method="post" class="needs-validation"
                                  novalidate="" enctype='multipart/form-data'>
                                <div class="row">
                                    {% for itemModulo in DATAMODULOS %}
                                        <div class="accordion">
                                            <div class="accordion-item">
                                                <div class="accordion-header"
                                                     id="collapseHeaderModulo{{ itemModulo.CODMODULO }}">
                                                    <button class="accordion-button collapsed"
                                                            type="button"
                                                            data-bs-toggle="collapse"
                                                            data-bs-target="#collapseModulo{{ itemModulo.CODMODULO }}"
                                                            aria-expanded="false"
                                                            aria-controls="collapseModulo{{ itemModulo.CODMODULO }}">
                                                        <i class="mdi {{ itemModulo.ICONE }} mdi-24px pe-2"></i> {{ itemModulo.TITULO }}
                                                        ({{ itemModulo.SERVICOS|length }})
                                                    </button>
                                                </div>
                                                <div class="accordion-collapse collapse px-3"
                                                     id="collapseModulo{{ itemModulo.CODMODULO }}"
                                                     aria-labelledby="#collapseHeaderModulo{{ itemModulo.CODMODULO }}"
                                                     data-bs-parent="#collapseHeaderModulo{{ itemModulo.CODMODULO }}">
                                                    <div class="accordion-body col">
                                                        {% for index, itemServico in itemModulo.SERVICOS %}
                                                            <input type="hidden" name="codservico[]" value="{{ itemServico.CODSERVICO }}">
                                                            <h6>
                                                                <i class="mdi {{ itemServico.ICONE }} mdi-24px pe-2"></i> {{ itemServico.TITULO }}
                                                            </h6>
                                                            <div class="row">
                                                                <div class="form-group col-12">
                                                                    <div class="form-group">
                                                                        <label class="custom-switch me-3">
                                                                            <input type="checkbox"
                                                                                   class="custom-switch-input"
                                                                                   name="ckbLer{{ itemServico.CODSERVICO }}"
                                                                                   id="ckbLer{{ itemServico.CODSERVICO }}"
                                                                                   value="{{ itemServico.CODSERVICO }}" {{ itemServico.LER=="1"?"checked":"" }}>
                                                                            <span class="custom-switch-indicator"></span>
                                                                            <span class="custom-switch-description-right">Ler</span>
                                                                        </label>
                                                                        <label class="custom-switch me-3">
                                                                            <input type="checkbox"
                                                                                   class="custom-switch-input"
                                                                                   name="ckbSalvar{{ itemServico.CODSERVICO }}"
                                                                                   id="ckbSalvar{{ itemServico.CODSERVICO }}"
                                                                                   value="{{ itemServico.CODSERVICO }}" {{ itemServico.SALVAR=="1"?"checked":"" }}>
                                                                            <span class="custom-switch-indicator"></span>
                                                                            <span class="custom-switch-description-right">Salvar</span>
                                                                        </label>
                                                                        <label class="custom-switch me-3">
                                                                            <input type="checkbox"
                                                                                   class="custom-switch-input"
                                                                                   name="ckbAlterar{{ itemServico.CODSERVICO }}"
                                                                                   id="ckbAlterar{{ itemServico.CODSERVICO }}"
                                                                                   value="{{ itemServico.CODSERVICO }}" {{ itemServico.ALTERAR=="1"?"checked":"" }}>
                                                                            <span class="custom-switch-indicator"></span>
                                                                            <span class="custom-switch-description-right">Alterar</span>
                                                                        </label>
                                                                        <label class="custom-switch me-3">
                                                                            <input type="checkbox"
                                                                                   class="custom-switch-input"
                                                                                   name="ckbExcluir{{ itemServico.CODSERVICO }}"
                                                                                   id="ckbExcluir{{ itemServico.CODSERVICO }}"
                                                                                   value="{{ itemServico.CODSERVICO }}" {{ itemServico.EXCLUIR=="1"?"checked":"" }}>
                                                                            <span class="custom-switch-indicator"></span>
                                                                            <span class="custom-switch-description-right">Excluir</span>
                                                                        </label>
                                                                        <label class="custom-switch me-3">
                                                                            <input type="checkbox"
                                                                                   class="custom-switch-input"
                                                                                   name="ckbOutros{{ itemServico.CODSERVICO }}"
                                                                                   id="ckbOutros{{ itemServico.CODSERVICO }}"
                                                                                   value="{{ itemServico.CODSERVICO }}" {{ itemServico.OUTROS=="1"?"checked":"" }}>
                                                                            <span class="custom-switch-indicator"></span>
                                                                            <span class="custom-switch-description-right">Diversos</span>
                                                                        </label>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                <input type="hidden" id="codperfil" name="codperfil"
                                       value="{{ PERFIL.CODPERFIL }}">
                                <input type="hidden" name="pg" value="{{ GETPARAMS.pg }}">
                                <input type="hidden" name="buscar" value="{{ GETPARAMS.buscar }}">
                                <div class="row mt-3">
                                    <div class="form-group col-sm-12 col-md-12 pt-3">
                                        {% if(SERVICO.ALTERAR=="T" or SERVICO.SALVAR=="1") %}
                                            <button type="submit"
                                                    class="btn btn-primary btn-lg btn-round col-sm-3 col-lg-2 font-weight-bold"
                                                    style="float: right;">
                                                Salvar
                                            </button>
                                        {% endif %}
                                        <a href="../"
                                           class="btn btn-link btn-lg col-sm-3 col-lg-2 font-weight-bold"
                                           style="float: right;">
                                            Voltar
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
