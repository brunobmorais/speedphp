    <form id="formTrocarUsuario" class="needs-validation" novalidate action="{{ SERVICO.URL }}-trocar-action/"
          method="post" enctype='multipart/form-data'>
        <div class="row">
            <div class="col-12 p-0">
                <div class="form-group col-12 col-md-12 float-left">
                    <label class="mb-0">Usuário</label>
                    <p id="nomeTrocarUsuarioModal"></p>
                </div>
                <div class="form-group col-12 col-md-12 float-left">
                    <label class="mb-0">Email</label>
                    <p id="emailTrocarUsuarioModal"></p>
                </div>
            </div>
        </div>

        <div class="row pt-5">
            <input type="hidden" name="CODUSUARIO" id="codusuarioTrocarUsuarioModal" value=""/>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a href="javascript:void(0)"
                   class="btn btn-lg btn-link btn-round col-md-3 col-lg-2 float-right mr-md-2 mt-2" data-bs-dismiss="modal" data-bs-target="#my-modal" aria-label="Close">
                    Voltar
                </a>
                <button type="submit" id="btnTrocarUsuario"
                        class="btn btn-lg btn-primary btn-round col-md-3 col-lg-2 float-right mt-2">
                    Confirmar
                </button>
            </div>
        </div>
    </form>
</x-div.modal>

